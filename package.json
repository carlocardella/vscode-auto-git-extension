{
  "name": "vscode-auto-git-extension",
  "displayName": "VSCode Auto Git Extension",
  "description": "An extension that automatically checks in changes to the local repository on file save and periodically pulls/pushes to GitHub.",
  "version": "0.1.0",
  "publisher": "Carlo Cardella",
  "engines": {
    "vscode": "^1.60.0"
  },
  "activationEvents": [
    "onSaveTextDocument"
  ],
  "main": "./out/extension.js",
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "webpack": "webpack --mode production",
    "webpack:watch": "webpack --watch --mode development"
  },
  "contributes": {
    "commands": [
      {
        "command": "extension.autoGit",
        "title": "Auto Git"
      }
    ]
  },
  "configuration": {
    "type": "object",
    "title": "Auto Git Configuration",
    "properties": {
      "autoGit.syncInterval": {
        "type": "number",
        "default": 10,
        "minimum": 1,
        "description": "Interval in minutes for periodic pull/push to the remote repository."
      },
      "autoGit.syncOnStartup": {
        "type": "boolean",
        "default": true,
        "description": "If true, perform a git pull/push sync when the extension is activated, even if no file has been saved yet."
      }
    }
  },
  "dependencies": {
    "simple-git": "^3.28.0"
  },
  "devDependencies": {
    "@types/node": "^16.11.7",
    "ts-loader": "^9.5.1",
    "typescript": "^4.4.4",
    "vscode": "^1.1.37",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/carlocardella/vscode-auto-git-extension.git"
  },
  "keywords": [
    "vscode",
    "extension",
    "git",
    "automation"
  ],
  "license": "MIT"
}
